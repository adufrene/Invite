<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.hackerbros.invite.AddEventFragment">

    <ImageButton
        android:id="@+id/add_event_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/add_event_edit_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/add_event_image"
        android:hint="Event Title" />

    <EditText
        android:id="@+id/add_event_edit_description"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/add_event_edit_title"
        android:layout_alignLeft="@+id/add_event_edit_title"
        android:layout_alignRight="@+id/add_event_edit_title"
        android:layout_alignStart="@+id/add_event_edit_title"
        android:layout_below="@+id/add_event_image"
        android:hint="Event Description" />

    <EditText
        android:id="@+id/add_event_edit_location"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/add_event_edit_description"
        android:layout_centerHorizontal="true"
        android:hint="Location" />

    <Button
        android:id="@+id/add_event_edit_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_event_edit_location"
        android:text="Date and Time" />

    <Button
        android:id="@+id/add_event_edit_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add" />


</RelativeLayout>
